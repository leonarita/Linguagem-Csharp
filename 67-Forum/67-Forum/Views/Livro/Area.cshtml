
@model IEnumerable<_67_Forum.Models.Livro>

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Livros por Área</title>
</head>

<body>
    <h4>@ViewBag.Cabecalho</h4>
    <hr />

    <ul>

        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Titulo, "Detalhes", "Livro", new { @idLivro = item.IdLivro, }, null)
                <br /> <em>@Html.DisplayFor(modelItem => item.Autor)</em>
                <br /> <b>R$ @Html.DisplayFor(modelItem => item.Preco)</b>
                <br /><br />
            </li>
        }

    </ul>

    @Html.ActionLink("Voltar", "Index")

</body>

</html>